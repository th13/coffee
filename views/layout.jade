doctype html
html(lang='en')
  head
    // So meta
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    meta(name='description' content='Web-based tool for dealing with coffee plantations and coffee.')
    meta(name='author' content='Team Struct by_Lightning')
    
    title #{title}

    link(rel='stylesheet' type='text/css' href='css/paper-bootstrap.css')
    link(rel='stylesheet' type='text/css' href='css/navbar-fixed.css')
    link(rel='stylesheet' type='text/css' href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css")
    block localCSS
      
  body
    nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
      .container
        .navbar-header
          button.navbar-toggle(type='button' data-toggle='collapse' data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Coffee!
        div#navbar(class='navbar-collapse collapse')
          ul.nav.navbar-nav
            li
              a(href='/plantations') Plantations
            li 
              a(href='/clients') Clients
            li 
              a(href='/products') Products
    
    .container
      block content
                
    .footer
      .container
        p.text-muted.text-center &copy; 2015 Team Struct by_Lightning 
          span.fa.fa-flash

    //- Global JavaScript
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js')
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" integrity="sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS" crossorigin="anonymous")    
    block localJS
